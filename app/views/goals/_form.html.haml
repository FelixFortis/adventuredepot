= form_for @goal do |f|
  - if @goal.errors.any?
    .alert.alert-error
      %h4= "#{pluralize(@goal.errors.count, "error")} prohibited this goal from being saved:"
      %ul
        - @goal.errors.full_messages.each do |msg|
          %li= msg

  .table
    = f.label :title
    = f.text_field :title
  .table
    = f.label :description
    = f.text_area :description, rows: 6
  .actions
    = f.submit 'Save', class: 'btn btn-success btn-sm'
